{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container bg w-50 p-5 m-auto">
    <h2 class="text-center border-bottom">Connection</h2>
    <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
        <div class="form-group my-4">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required="required" autocomplete="username" />
        </div>
        <div class="form-group my-4">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" class="form-control" required="required" autocomplete="current-password" />
        </div>
        <div class="form-check my-4">
            <input type="checkbox" id="remember_me" class="form-check-input" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
        <input type="submit" id="_submit" name="_submit" class="btn btn-color" value="{{ 'security.login.submit'|trans }}" />
    </form>
    <a class="text-center text-dark" href="{{ path('fos_user_registration_register') }}">Toujours pas inscrit ?</a>
</div>


{% block stylesheets %}
<style>
    .bg{
        background:  rgba(254,254,254, 0.8);
        box-shadow: 4px 2px 5px #D6CFC7;
    }
</style>
{% endblock %}
